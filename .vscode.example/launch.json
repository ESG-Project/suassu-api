{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Debug API (Main)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "APP_ENV": "dev",
                "LOG_LEVEL": "debug"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "logOutput": "debugger"
        },
        {
            "name": "üêõ Debug API (with .env)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "üß™ Debug Tests (All)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v",
                "-test.timeout=5m"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üêõ Debug Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üîç Debug Specific Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.v",
                "-test.run",
                "${selectedText}"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üìä Debug with Race Detection",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "APP_ENV": "dev",
                "LOG_LEVEL": "debug"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "buildFlags": ["-race"]
        }
    ]
}
