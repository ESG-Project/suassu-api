# Configurações da Aplicação
APP_NAME=suassu-api
APP_ENV=dev
HTTP_PORT=8080

# Configurações de Banco de Dados
# DB_DSN tem precedência sobre DATABASE_URL
DB_DSN=postgres://username:password@localhost:5432/database_name
# DATABASE_URL=postgres://username:password@localhost:5432/database_name

# Pool de Conexões
DB_MAX_OPEN_CONNS=20
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_IDLE_MS=60000
DB_CONN_MAX_LIFE_MS=300000

# Configurações de Log
LOG_LEVEL=info

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=suassu-api
JWT_AUDIENCE=suassu-clients
JWT_ACCESS_TTL_MIN=15
